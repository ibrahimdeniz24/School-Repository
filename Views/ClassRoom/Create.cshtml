@using _21_MVC_RepositorySchool.Models.ViewModels
@model EditClassRoomVM
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ClassRoom</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClassRoom.Name" class="control-label"></label>
                <input asp-for="ClassRoom.Name" class="form-control" />
                <span asp-validation-for="ClassRoom.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassRoom.SchoolId" class="control-label"></label>
                <select asp-for="ClassRoom.SchoolId" class="form-control">
                    <option> Lütfen Seçiniz</option>
                    @foreach (School item in ViewBag.Schools)
                    {
                        <option value="@item.SchoolName">@item.SchoolName</option>
                    }
                    <span asp-validation-for="ClassRoom.School" class="text-danger"></span>
                </select>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
